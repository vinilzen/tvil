doctype html
html
  head
    == Slim::Template.new("head.slim").render
  body
    .container-wrapper
      .sidebar-left data-spy="affix" data-offset-top="60"
        == Slim::Template.new("sidebar-left.slim").render
      .main data-spy="affix" data-offset-top="60"
        .container-fluid
          h1.page-header
            | Эконом
            label.activity
              | Активно
              input.flat type="checkbox" name="choice"
              .check-custom
          .row.row-main
            form
              .col-sm-12
                .form-group.row
                  .col-sm-6
                    span.required *
                    label Название категории номера
                    input.form-control placeholder="Например: для пары с ребенком" type="text"
                .form-group.row
                  .col-sm-6
                    span.required *
                    label for="exampleInputPassword1" Категория номера
                    select.form-control
                      option Выберите
                      option 1
                      option 2
                .form-group.row
                  .col-sm-6
                    span.required *
                    label Количество номеров данной категории
                    input.form-control placeholder="3" min="1" type="text"
                .form-group.row
                  .col-sm-6
                    span.required *
                    label Площадь номеров категории
                    input.form-control placeholder="3" min="1" type="text"
                  .col-sm-6
                    .checkbox.mt33
                      label
                        input type="checkbox"
                        | Применить для всех номеров
                .form-group.row
                  .col-sm-12
                    label Описание
                    textarea.form-control placeholder="Опишите подробнее эту категорию номеров" rows="5"
                .form-group.row
                  .col-sm-6
                    span.required *
                    label Количество комнат в номере
                    input.form-control placeholder="Выберите" min="1" type="text"
