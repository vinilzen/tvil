doctype html
html
  head
    == Slim::Template.new("head.slim").render
  body
    nav.navbar.navbar-inverse.navbar-tvil-fixed-top
      == Slim::Template.new("nav_top.slim").render
    .container-wrapper.container-wrapper-obj
      .sidebar-left.sidebar-light
        == Slim::Template.new("sidebar-left-light.slim").render
      .main.obj
        .container-fluid
          .media
            .media-left
              a href="#"
                img.img-circle src="../img/ava.jpg" width="56" height="56" alt=""
